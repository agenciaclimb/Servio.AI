{
  "name": "servio-ai-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:backend": "npm --prefix backend test",
    "test:all": "npm test && npm run test:backend",
    "preview": "vite preview",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "start:ai": "node server.js",
    "prepare": "husky install",
    "validate": "npm run format:check && npm run lint && npm run typecheck && npm run test:all",
    "precommit": "lint-staged",
    "firebase:login": "firebase login",
    "firebase:use": "firebase use",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report",
    "e2e:debug": "playwright test --debug",
    "cy:run": "npm run build && start-server-and-test preview http://localhost:4173 \"cypress run --browser chrome --headless --config-file cypress.config.cjs\"",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npx depcheck",
    "deps:update": "npx npm-check-updates -i",
    "lint:ci": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings=1000",
    "e2e:smoke": "playwright test tests/e2e/smoke/basic-smoke.spec.ts",
    "e2e:critical": "playwright test tests/e2e/smoke/critical-flows.spec.ts",
    "validate:prod": "npm run typecheck && npm test && npm run e2e:smoke && npm run build"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^2.7.1",
    "@stripe/stripe-js": "^3.5.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "firebase": "^12.5.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-joyride": "^2.9.3",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.0.5",
    "autoprefixer": "^10.4.19",
    "cypress": "^13.17.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.1.6",
    "jsdom": "^27.1.0",
    "lint-staged": "^15.2.10",
    "msw": "^2.12.1",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^3.4.3",
    "terser": "^5.44.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
