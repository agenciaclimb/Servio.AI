{
  "name": "servio-cloud-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Servio.AI platform",
  "main": "index.js",
  "scripts": {
    "deploy": "firebase deploy --only functions",
    "deploy:notify": "firebase deploy --only functions:notifyOnNewMessage",
    "deploy:rate": "firebase deploy --only functions:updateProviderRate",
    "deploy:cleanup": "firebase deploy --only functions:cleanupOldNotifications",
    "test": "jest",
    "test:watch": "jest --watch",
    "logs": "firebase functions:log",
    "logs:notify": "firebase functions:log --only notifyOnNewMessage",
    "logs:rate": "firebase functions:log --only updateProviderRate"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
