VITE_FIREBASE_PROJECT_ID="SEU_ID_DE_PROJETO_FIREBASE"
VITE_FIREBASE_STORAGE_BUCKET="SEU_PROJETO.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="SEU_SENDER_ID"
VITE_FIREBASE_APP_ID="SEU_APP_ID"
VITE_FIREBASE_MEASUREMENT_ID="SEU_MEASUREMENT_ID"

# --- Chaves do Stripe (usadas no Frontend e Backend) ---
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_SUA_CHAVE_PUBLICAVEL_DO_STRIPE"
STRIPE_SECRET_KEY="sk_test_SUA_CHAVE_SECRETA_DO_STRIPE"
STRIPE_WEBHOOK_SECRET="whsec_SUA_CHAVE_SECRETA_DO_WEBHOOK"

# --- Chave da Google AI (Gemini) (usada no Backend de IA) ---
GEMINI_API_KEY="SUA_CHAVE_DE_API_DO_GEMINI"

# --- Omnichannel - Meta & WhatsApp (NÃO EXPOR NO CÓDIGO) ---
# Meta App Credentials (para Instagram + Facebook Messenger)
META_ACCESS_TOKEN="SEU_META_ACCESS_TOKEN_AQUI"
META_APP_SECRET="SUA_CHAVE_SECRETA_DO_APP_META"
META_APP_ID="SEU_ID_DO_APP_META"

# WhatsApp Business API Credentials
WHATSAPP_TOKEN="SEU_WHATSAPP_ACCESS_TOKEN"
WHATSAPP_PHONE_ID="SEU_WHATSAPP_PHONE_NUMBER_ID"

# Omnichannel Webhook Secret (gerar string aleatória segura)
OMNI_WEBHOOK_SECRET="SUA_STRING_SECRETA_PARA_VALIDACAO_DE_WEBHOOKS"

# --- Configurações do Backend ---
# Base URL para o backend (usado no frontend e scripts). Prioridade:
# 1) VITE_API_BASE_URL (recomendado)
# 2) VITE_BACKEND_URL
# 3) VITE_BACKEND_API_URL
# Caso não definido, o código usa o default do Cloud Run quando disponível.
VITE_API_BASE_URL="http://localhost:5173" # em dev com Vite, o proxy lida com /api

PORT=8081